<h2>Diary new</h2>

<%= render 'layouts/error', obj: @diary %>

<%= form_with model:[@category, @diary] do |f| %>
  
  <%= f.file_field :image, placeholder: "画像", accept: "image/*" %>
  
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create' %>
<% end %>