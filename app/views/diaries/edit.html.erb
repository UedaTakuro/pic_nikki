<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Edit diary</h2>
      <%= render 'layouts/error', obj: @diary %>
      <%= form_with model:[@diary.category, @diary] do |f| %>
        <%= f.file_field :image, placeholder: "画像", accept: "image/*" %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Body</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Update' %>
      <% end %>
    </div>
  </div>
</div>